@model List<Order>

<h1>Order History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Status</th>

            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalPrice</td>
                <td>
                    @if (order.Status.ToString() == "Pending")
                    {
                        <span style="color: orange;">@order.Status</span>
                    }
                    else if (order.Status.ToString() == "Shipped")
                    {
                        <span style="color: blue;">@order.Status</span>
                    }
                    else if (order.Status.ToString() == "Delivered")
                    {
                        <span style="color: green;">@order.Status</span>
                    }
                    else if (order.Status.ToString() == "Canceled")
                    {
                        <span style="color: red;">@order.Status</span>
                    }
                </td>

                <td>
                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
