
@model List<Product>  


<div class="searchParent row">
    <input oninput="search(event)" class="col-5" type="text" id="searchInput" placeholder="Search...">

    <select id="categoryFilter" class="col-4">
        <option value="">All Categories</option>
        @foreach (var category in (List<Category>)ViewBag.category)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }
    </select>
</div>

<div id="allProduct"></div>


@section scripts {
    <script>
        (function () {
            getAllProduct();
        })();


        $('#categoryFilter').on('change', function () {
            var selectedCategoryId = $(this).val();


            filterProducts(selectedCategoryId);
        });

    </script>
}
